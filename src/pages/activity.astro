---
import Layout from '../layouts/BaseLayout.astro';
import activities from '../data/activities.json';
import volunteers from '../data/volunteers.json';

import type {
  Competition,
  Oversea,
  Speaker,
  VolunteerItem,
} from '../data/props';
import ActivitiesEnhanced from '../components/activities/ActivitiesEnhanced';

const competitions: Competition[] = activities.competitions;
const overseas: Oversea[] = activities.overseas;
const speaker: Speaker[] = activities.speaker;
const pinVolunteer = volunteers.pin;
let volunteerItems: VolunteerItem[] = volunteers.items;
if (pinVolunteer) {
  volunteerItems = [pinVolunteer, ...volunteerItems];
}
---

<Layout
  title="Activities & Volunteering"
  description="Competitions, hackathons, volunteer work, speaking engagements, and international activities"
>
  <ActivitiesEnhanced
    competitions={competitions}
    volunteers={volunteerItems}
    overseas={overseas}
    speakers={speaker}
    client:load
  />
</Layout>
