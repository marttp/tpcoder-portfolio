---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer';

type Props = CollectionEntry<'blog'>['data'];

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="px-12 m-10 h-128 flex">
      <div class="text-center my-10 flex flex-col justify-evenly">
        <h1 class="text-6xl font-bold">Oops! 🙇‍♂️</h1>
        <h2 class="text-3xl font-semibold mb-4">404 - Page Not Found</h2>
        <p class="text-xl mb-4">The page you are looking for might have been removed, had its name changed or is temporarily unavailable.</p>
        <button class="bg-blue-500 hover:bg-blue-700 text-primary-light font-bold py-2 px-4 rounded">
					<a href="/">🏠 Go back to homepage</a>
				</button>
      </div>
    </main>
    <Footer />
  </body>
</html>

