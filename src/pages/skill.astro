---
import Layout from '../layouts/BaseLayout.astro';
import SectionTitle from '../components/SectionTitle';
import SkillBubbles from '../components/skills/SkillBubbles';
import CertifiedContainer from '../components/skills/CertifiedContainer';
import skills from '../data/skills.json';
import certified from '../data/certified.json';
---

<Layout
  title="Skills"
  description="My abilities which able to use in daily basis to made the impact to organization"
>
  <SectionTitle title="Skills" />
  <div>
    <SkillBubbles label="Career Target" skills={skills.careerTarget} />
    <SkillBubbles label="Domain of interest" skills={skills.domain} />
    <SkillBubbles label="Technical Skills" skills={skills.technical} />
    <SkillBubbles label="Relevant Skills" skills={skills.relevant} />
    <SkillBubbles label="Languages" skills={skills.languages} />
    <SkillBubbles label="Other Skills" skills={skills.other} />
    <CertifiedContainer label="Certified" certifiedList={certified} />
  </div>
</Layout>
